<h3>Room 詳細</h3>

<% if @room.image.attached? %>
  <%= image_tag @room.image %>
<% end %>

<table>
  <tr>
    <th>名前</th>
    <td><%= @room.name %></td>
  </tr>
  <tr>
    <th>詳細</th>
    <td><%= @room.details %></td>
  </tr>
  <tr>
    <th>料金</th>
    <td><%= @room.price %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @room.address %></td>
  </tr>
</table>

<%= render "shared/form" %>

<div>
  <ul>
    <li><%= link_to "施設一覧に戻る", :rooms %></li>
  </ul>
</div>